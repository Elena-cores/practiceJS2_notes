<div class="sidebar">
    <style>
        .sidebar {
            height: 100vh;
            overflow-y: auto;
            scrollbar-width: none;
        }
        
        .sidebar::-webkit-scrollbar {
            display: none;
        }
        
    </style>
    <div class="perfil">
        <img src="../images/perfil.jpg" alt="Foto de perfil" class="profile-img">
        <h2><%= username %></h2> 
        <p>
            <!--★★★★-->
            <%= valoracionMedia %>
        </p>
        <p><%= fechaRegistro %></p>
    </div>

   
    <nav>
        <ul>
            <li><a href="/perfil" class="<%= activePage === 'perfil' ? 'activo' : '' %>">
                <i class="fas fa-user"></i> Perfil
            </a></li>
            <li><a href="/buzon" class="<%= activePage === 'buzon' ? 'activo' : '' %>">
                <i class="fas fa-envelope"></i> Buzón
            </a></li>
            <li><a href="/listado" class="<%= activePage === 'listado' ? 'activo' : '' %>">
                <i class="fas fa-list"></i> Listado
            </a></li>
            <li><a href="/favoritos" class="<%= activePage === 'favoritos' ? 'activo' : '' %>">
                <i class="fas fa-heart"></i> Favoritos
            </a></li>
            <li><a href="/valoraciones" class="<%= activePage === 'valoraciones' ? 'activo' : '' %>">
                <i class="fas fa-star"></i> Valoraciones
            </a></li>
        </ul>
    </nav>

   
    <div class="settings" style="margin-top: 230px;">
        <a href="/ajustes">
            <img src="../images/settings-icon.svg" alt="Configuración">
        </a>
    </div>
</div>
